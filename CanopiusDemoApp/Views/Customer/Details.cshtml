@model Customer

<h4>Customer Details</h4>

@(Html.Kendo().PanelBar()
    .Name("panelbar")
    .Items(panelbar =>
    {
        panelbar.Add().Text("Customer ID: " + Model.Id).HtmlAttributes(new { @class = "panel-text" });
        panelbar.Add().Text("Name: " + Model.Name).HtmlAttributes(new { @class = "panel-text" });
        panelbar.Add().Text("Address: " + Model.Address).HtmlAttributes(new { @class = "panel-text" });
        panelbar.Add().Text("Phone: " + Model.Phone).HtmlAttributes(new { @class = "panel-text" });
        panelbar.Add().Text("Email: " + Model.Email).HtmlAttributes(new { @class = "panel-text" });
        panelbar.Add().Text("Date of Birth: " + Model.DateofBirth.ToShortDateString()).HtmlAttributes(new { @class = "panel-text" });
        panelbar.Add().Text("Actions").Expanded(false).Items(actions =>
        {
            actions.Add().Text("Update Customer Information").Action("Update", "Customer", new{ id = Model.Id});
            actions.Add().Text("Back to List").Action("All", "Customer");
        });
    })
)

